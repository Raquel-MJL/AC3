<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>

    //Ejercicio 1 

    let num1= prompt("Escriba el primer número: "+ "");
    let num2= prompt("Escriba el segundo número: "+ "");
    
    if(num1>num2) 
        { 
        document.write ("El primer número es mayor que el segundo"); 
        } 
    else if(num1==num2) 
        { 
        document.write ("Ambos números son iguales"); 
        } 
    else 
        { 
        document.write ("El segundo número es mayor que el primero"); 
        }

    //Ejercicio 2

    let num3= prompt("Escriba un número entero: "+ "");

    if(num3>0) 
        { 
        document.write ("El número es positivo"); 
        } 
    else if(num3==0) 
        { 
        document.write ("El número es 0"); 
        } 
    else 
        { 
        document.write ("El número es negativo"); 
        }

    //Ejercicio 3

    let num4= parseFloat(prompt("Escriba su primera nota "+ ""));
    let num5= parseFloat(prompt("Escriba su segunda nota "+ ""));
    let num6= parseFloat(prompt("Escriba su tercera nota "+ ""));

    let resultado1= (num4+num5+num6)/3

    if(resultado1 >=5)
        {
        document.write ("Aprobado" + "<br>"); 
        }
    else 
        {
            document.write("Suspenso" + "<br>");
        }
    
    document.write(resultado1.toFixed(2));

    //Ejercicio 4

    let num7= parseFloat(prompt("Indique primer número "+ ""));
    let num8= parseFloat(prompt("Indique segundo número "+ ""));
    let num9= parseFloat(prompt("Indique tercer número "+ ""));

    if(num7==num8 && num7==num9)
        {
            document.write("La suma de los dos primeros por el tercero: "+ ((num7+num8)*num9) + "<br>");

        }
    else{
            document.write("Los números no son iguales");
    }
    </script>
